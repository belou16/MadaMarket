{# templates/profile/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Profil - MadaMarket{% endblock %}

{% block body %}
<style>
    .profile-container {
        max-width: 800px;
        margin: 2rem auto;
    }

    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        margin-bottom: 2rem;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        background: white;
        color: #667eea;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin: 0 auto 1rem;
    }

    .profile-info {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        margin-bottom: 2rem;
    }

    .info-row {
        display: flex;
        padding: 1rem 0;
        border-bottom: 1px solid #ecf0f1;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #7f8c8d;
        width: 150px;
    }

    .info-value {
        color: #2c3e50;
        flex: 1;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .danger-zone {
        background: #fff5f5;
        border: 1px solid #feb2b2;
        padding: 1.5rem;
        border-radius: 10px;
        margin-top: 2rem;
    }

    .danger-zone h3 {
        color: #e74c3c;
        margin-bottom: 1rem;
    }
</style>

<div class="profile-container">
    <div class="profile-header">
