{# templates/product/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - MadaMarket{% endblock %}

{% block body %}
<style>
    .product-detail {
        max-width: 1000px;
        margin: 2rem auto;
    }

    .product-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .product-image-large {
        width: 100%;
        height: 400px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 8rem;
    }

    .product-image-large img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
    }

    .product-details h1 {
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .product-category-badge {
        display: inline-block;
        background: #667eea;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .product-price-large {
        font-size: 2.5rem;
        color: #27ae60;
        font-weight: bold;
        margin: 1.5rem 0;
    }

    .product-stock-info {
        padding: 1rem;
        background: #d4edda;
        color: #155724;
        border-radius: 5px;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .product-stock-info.out-of-stock {
        background: #f8d7da;
        color: #721c24;
    }

    .product-description-section {
        margin: 2rem 0;
    }

    .product-description-section h2 {
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .product-description-section p {
        color: #7f8c8d;
        line-height: 1.8;
    }

    .product-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .back-link {
        margin-bottom: 2rem;
        display: inline-block;
    }

    .back-link a {
        color: #667eea;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    @media (max-width: 768px) {
        .product-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="product-detail">
    <div class="back-link">
        <a href="{{ path('app_product_index') }}">‚Üê Retour aux produits</a>
    </div>

    <div class="product-container">
        <div>
            <div class="product-image-large">
                {% if product.image %}
                    <img src="{{ product.image }}" alt="{{ product.name }}">
                {% else %}
                    {% if product.category == 'Fruits' %}üçã
                    {% elseif product.category == 'L√©gumes' %}ü•ï
                    {% elseif product.category == 'Riz' %}üåæ
                    {% elseif product.category == '√âpices' %}üå∂Ô∏è
                    {% else %}üõí
                    {% endif %}
                {% endif %}
            </div>
        </div>

        <div class="product-details">
            <span class="product-category-badge">{{ product.category }}</span>
            <h1>{{ product.name }}</h1>
            
            <div class="product-price-large">{{ product.price|number_format(2, ',', ' ') }} ‚Ç¨</div>
            
            <div class="product-stock-info {% if product.stock == 0 %}out-of-stock{% endif %}">
                {% if product.stock > 0 %}
                    ‚úÖ En stock - {{ product.stock }} unit√©s disponibles
                {% else %}
                    ‚ùå Rupture de stock
                {% endif %}
            </div>

            {% if product.description %}
                <div class="product-description-section">
                    <h2>Description</h2>
                    <p>{{ product.description }}</p>
                </div>
            {% endif %}

            <div class="product-actions">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn btn-primary">Modifier</a>
                    <form method="post" action="{{ path('app_product_delete', {id: product.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button class="btn btn-danger" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');">Supprimer</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}